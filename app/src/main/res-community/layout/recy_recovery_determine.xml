<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp"
            android:maxLines="1"
            android:singleLine="true"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4D66BB6A"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    tools:text="aaa"/>

                <CheckBox
                    android:id="@+id/cb_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本地" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4DFFEE58"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_recovery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    tools:text="bbb"/>

                <CheckBox
                    android:id="@+id/cb_recovery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还原"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4D42A5F5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1">

                <com.dreaming.hscj.widget.ClearEditView
                    android:id="@+id/ev_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:gravity="center_vertical|left"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text=""
                    tools:text="aaa"
                    android:maxLines="1"
                    android:singleLine="true" />

                <CheckBox
                    android:id="@+id/cb_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="录入"/>
            </LinearLayout>

        </RadioGroup>

    </LinearLayout>
</androidx.cardview.widget.CardView>