<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_add_ocr"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="invisible"
        tools:visibility="visible"
        android:background="@drawable/shape_donate_bg"
        android:layout_marginLeft="118dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="从识别结果中添加"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_add_searching"/>

    <TextView
        android:id="@+id/tv_add_searching"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="invisible"
        tools:visibility="visible"
        android:background="@drawable/shape_donate_bg"
        android:layout_marginLeft="118dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="从查找结果中添加"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_add_grouping"/>

    <TextView
        android:id="@+id/tv_add_grouping"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="invisible"
        tools:visibility="visible"
        android:background="@drawable/shape_donate_bg"
        android:layout_marginLeft="118dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="从已分组人员添加"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_add_community"/>

    <TextView
        android:id="@+id/tv_add_community"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="invisible"
        tools:visibility="visible"
        android:background="@drawable/shape_donate_bg"
        android:layout_marginLeft="118dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="从社区人员中添加"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/iv_sampling_plan"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="invisible"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/tv_add_community"
        app:layout_constraintEnd_toStartOf="@+id/tv_add_grouping"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_add_ocr"
        app:srcCompat="@drawable/ic_sampling_plan" />

    <View
        android:id="@+id/v_point"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/shape_sampling_plan_point"
        android:visibility="invisible"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/iv_sampling_plan"
        app:layout_constraintBottom_toTopOf="@+id/iv_sampling_plan"
        app:layout_constraintLeft_toRightOf="@+id/iv_sampling_plan"
        app:layout_constraintRight_toRightOf="@+id/iv_sampling_plan"/>

    <TextView
        android:id="@+id/tv_plan_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="@color/white"
        android:visibility="invisible"
        tools:visibility="visible"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@+id/tv_symbol_add"
        app:layout_constraintRight_toRightOf="@+id/v_point"
        app:layout_constraintTop_toTopOf="@+id/v_point"
        app:layout_constraintBottom_toBottomOf="@+id/v_point"/>

    <TextView
        android:id="@+id/tv_symbol_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:visibility="invisible"
        tools:visibility="visible"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="@+id/v_point"
        app:layout_constraintRight_toLeftOf="@+id/tv_plan_num"
        app:layout_constraintTop_toTopOf="@+id/v_point"
        app:layout_constraintBottom_toBottomOf="@+id/v_point"/>

    <ImageView
        android:id="@+id/iv_expansion"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_sampling_expansion"
        android:rotation="180"
        android:padding="5dp"
        android:visibility="invisible"
        tools:visibility="visible"
        app:srcCompat="@drawable/ic_expansion"
        app:layout_constraintTop_toTopOf="@+id/tv_add_community"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_add_community"
        app:layout_constraintBottom_toBottomOf="@+id/tv_add_community"/>

</androidx.constraintlayout.widget.ConstraintLayout>