<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_na_sampling_search_bg"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/shape_na_sampling_b_l_t_l_btn"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center_vertical"
        android:text="身份号:" />

    <com.dreaming.hscj.widget.ClearEditView
        android:id="@+id/ev_id_no"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:hint="请输入身份号后几位查询添加待采样成员"
        android:textSize="14sp"
        android:text=""
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:inputType="number"
        android:digits="0123456789字qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"/>

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:gravity="center"
        android:background="@drawable/selector_btn"
        android:text="搜索"
        android:textColor="@color/white"/>
</LinearLayout>