<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_input_replace_content"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@drawable/shape_common_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_input_replace_content_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:text=""
        android:textColor="@color/black"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <EditText
            android:id="@+id/et_input_replace_content_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|left"
            android:background="#00000000"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:clickable="false"
            android:text=""
            android:maxLines="1"
            android:singleLine="true"/>
        <View
            android:id="@+id/v_intercept"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_input_replace_content_last"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/shape_input_move"
        android:gravity="center"
        android:text="←"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_input_replace_content_next"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/shape_input_move"
        android:gravity="center"
        android:text="→"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_input_replace_content_clear"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/shape_input_delete"
        android:gravity="center"
        android:text="×"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_input_replace_content_confirm"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/selector_btn"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"/>
</LinearLayout>
