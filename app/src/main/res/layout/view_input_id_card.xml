<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <LinearLayout android:id="@+id/ll_input_id_card_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/tv_input_id_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:text="身份号"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <com.dreaming.hscj.widget.ClearEditView
            android:id="@+id/ev_recognize_id_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入身份号"
            android:imeOptions="actionSearch"
            android:inputType="number"
            android:digits="0123456789xX"
            android:maxLines="1"
            android:maxLength="18"
            android:selectAllOnFocus="true"
            android:text="" />

        <ImageView
            android:id="@+id/iv_recognize_id_card"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/shape_donate_bg"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:src="@drawable/ic_id_card_recognize"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>