<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48.9dp"
    android:background="#00e676"
    xmlns:tools="http://schemas.android.com/tools">

    <com.dreaming.hscj.widget.AppBarView
        android:id="@+id/appbar_na"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:iv_selected="@drawable/ic_app_bar_na_selected"
        app:iv_unselect="@drawable/ic_app_bar_na_unselect"
        app:is_select="true"
        app:texts="核酸"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/gl_v0"
        app:layout_constraintRight_toLeftOf="@+id/appbar_community"
        app:layout_constraintTop_toTopOf="parent" />

    <com.dreaming.hscj.widget.AppBarView
        android:id="@+id/appbar_community"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:iv_selected="@drawable/ic_app_bar_community_selected"
        app:iv_unselect="@drawable/ic_app_bar_community_unselect"
        app:texts="社区"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/appbar_na"
        app:layout_constraintRight_toLeftOf="@+id/appbar_other"
        app:layout_constraintTop_toTopOf="parent" />

    <com.dreaming.hscj.widget.AppBarView
        android:id="@+id/appbar_other"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:iv_selected="@drawable/ic_app_bar_other_selected"
        app:iv_unselect="@drawable/ic_app_bar_other_unselect"
        app:texts="其他"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/appbar_community"
        app:layout_constraintRight_toLeftOf="@+id/gl_v1"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98"/>


</androidx.constraintlayout.widget.ConstraintLayout>
